<!-- PWA SERVICE WORKER -->
<script>
    if ('serviceWorker' in navigator) {
        window.addEventListener('load', () => {
            navigator.serviceWorker.register('data:application/javascript;base64,')
                .then(() => console.log('PWA aktif!'))
                .catch(() => {});
        });
    }
</script>

<script src="https://unpkg.com/aos@2.3.1/dist/aos.js"></script>
<script>
    AOS.init({ duration: 1200, once: false, mirror: true });

    window.addEventListener('scroll', () => {
        document.querySelector('header').classList.toggle('scrolled', window.scrollY > 60);
    });

    const modal = document.getElementById('randevuModal');
    document.querySelectorAll('#openModalMobile, #heroRandevu, #desktopRandevu').forEach(btn => {
        btn.onclick = e => { e.preventDefault(); modal.classList.add('active'); };
    });
    document.querySelector('.close-modal').onclick = () => modal.classList.remove('active');
    modal.onclick = e => { if (e.target === modal) modal.classList.remove('active'); };

    document.getElementById('randevuForm').addEventListener('submit', function () {
        const ad = this.querySelector('input[name="Ad Soyad"]').value;
        const tel = this.querySelector('input[name="Telefon"]').value;
        const tur = this.querySelector('select[name="Hayvan Türü"]').value;
        const msg = this.querySelector('textarea[name="Mesaj"]').value || 'Yok';
        const wa = `*YENİ RANDEVU TALEBİ*%0A%0AAd Soyad: ${ad}%0ATelefon: ${tel}%0AHayvan: ${tur}%0AMesaj: ${msg}%0A%0APet Town Veteriner Kliniği`;
        this.querySelector('input[name="_next"]').value = `https://wa.me/905338388696?text=${wa}`;
    });
</script>
